{
  "format": "page",
  "id": "blog",
  "label": "blog",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "blogTitle": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Work In Progress"
        }
      },
      "description": {
        "type": "Text",
        "config": {
          "label": "description",
          "placeholder": "What this blog is about"
        }
      },
      "authors": {
        "type": "Group",
        "config": {
          "label": "authors",
          "repeat": true,
          "fields": {
            "author": {
              "type": "Link",
              "config": {
                "label": "author",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "author",
                    "fields": ["avatar", "name", "expertise", "home_situation"]
                  }
                ]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
